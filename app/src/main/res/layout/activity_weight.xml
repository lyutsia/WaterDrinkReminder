<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="@dimen/layout_padding"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".data_collection.WeightActivity">

    <TextView
        android:id="@+id/heading_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/heading_margin_top"
        android:background="@color/colorButtonText"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/heading_text_size"
        android:textColor="@color/colorText"
        android:text="@string/weight_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_textView_top"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/weight_text_view"
            android:layout_width="@dimen/textView_width"
            android:layout_height="@dimen/textView_height"
            android:layout_gravity="center"
            android:textColor="@color/colorText"
            android:layout_marginStart="@dimen/margin_textView_left"
            android:background="@color/colorButtonText"
            android:textAlignment="center"
            android:textStyle="bold"
            android:maxLength="5"
            android:onClick="editTextClick"
            android:inputType="numberDecimal"
            android:textSize="@dimen/input_text_size" />
        <TextView
            android:id="@+id/kg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/margin_kg_textView_left"
            android:text="кг"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size"
            android:maxLength="3"
            android:textColor="@color/colorText"
            android:textStyle="bold" />

    </LinearLayout>
    <ImageView
        android:id="@+id/weight"
        android:layout_width="@dimen/base_image_view_width"
        android:layout_height="@dimen/base_image_view_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/image_margin_top"
        android:src="@drawable/weight" />

    <Button

        android:id="@+id/OkButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center"
        android:text="@string/next_name"
        android:onClick="onOKClick"/>
</LinearLayout>