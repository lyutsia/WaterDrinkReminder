<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".data_collection.StartActivity">
    <TextView
        android:id="@+id/heading_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textView_height"
        android:background="@color/colorButtonText"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/heading_text_size"
        android:textColor="@color/colorText"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/flower"
        android:layout_width="@dimen/start_image_view_width"
        android:layout_height="@dimen/start_image_view_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/margin_textView_top"
        android:src="@drawable/water_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading_textView" />

    <Button

        android:id="@+id/OkButton"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/button_margin_top"
        android:layout_gravity="center"
        android:text="@string/next_name"
        android:onClick="onOKClick"
        app:layout_constraintTop_toBottomOf="@id/flower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>